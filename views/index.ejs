    <script>
      (function ($) {
        "use strict";
        $(document).ready(function () {
          var curSym = "$";
          $("#changePlan")
            .on("change", function () {
              var selectedPlan = $("#changePlan").find(":selected");
              var planId = selectedPlan.val();
              var data = selectedPlan.data();
              var fixedAmount = parseFloat(data.fixed_amount).toFixed(2);
              var minimumAmount = parseFloat(data.minimum_amount).toFixed(2);
              var maximumAmount = parseFloat(data.maximum_amount).toFixed(2);

              if (fixedAmount > 0) {
                $(".invest-input").val(fixedAmount);
                $(".invest-input").attr("readonly", true);
                $(".invest-range").text("");
              } else {
                $(".invest-input").val(minimumAmount);
                $(".invest-input").attr("readonly", false);
                $(".invest-range").text(
                  "(" +
                    curSym +
                    minimumAmount +
                    " - " +
                    curSym +
                    maximumAmount +
                    ")"
                );
              }

              var investAmount = $(".invest-input").val();
              var profitInput = $(".profit-input").text("");

              $(".period").text("");

              if (investAmount != "" && planId != null) {
                ajaxPlanCalc(planId, investAmount);
              }
            })
            .change();

          $(".invest-input").on("change", function () {
            var planId = $("#changePlan option:selected").val();
            var investAmount = $(this).val();
            var profitInput = $(".profit-input").text("");
            $(".period").text("");
            if (investAmount != "" && planId != null) {
              ajaxPlanCalc(planId, investAmount);
            }
          });
        });

        function ajaxPlanCalc(planId, investAmount) {
          // Find the plan data from the DOM instead of making an AJAX call
          investAmount = parseFloat(investAmount);

          // Loop through plans and find the one with matching ID
          <% if (plans && plans.length > 0) { %>
            const planData = {
              <% plans.forEach(function(plan, index) { %>
                '<%= plan._id %>': {
                  name: '<%= plan.name %>',
                  roiPercentage: <%= plan.roiPercentage %>,
                  roiPeriod: '<%= plan.roiPeriod %>',
                  term: <%= plan.term %>,
                  termPeriod: '<%= plan.termPeriod %>',
                  minAmount: <%= plan.minAmount %>,
                  maxAmount: <%= plan.maxAmount %>
                }<%= index < plans.length - 1 ? ',' : '' %>
              <% }); %>
            };
          <% } else { %>
            const planData = {};
          <% } %>

          if (planData[planId]) {
            const plan = planData[planId];

            // Validate investment amount
            if (isNaN(investAmount) || investAmount <= 0) {
              iziToast.error({
                message: "Please enter a valid investment amount",
                position: "topRight",
              });
              return;
            }

            // Check if investment amount is within plan limits
            if (plan.minAmount > 0 && investAmount < plan.minAmount) {
              iziToast.error({
                message: `Minimum investment amount is $${plan.minAmount.toFixed(2)}`,
                position: "topRight",
              });
              return;
            }

            if (plan.maxAmount > 0 && investAmount > plan.maxAmount) {
              iziToast.error({
                message: `Maximum investment amount is $${plan.maxAmount.toFixed(2)}`,
                position: "topRight",
              });
              return;
            }

            // Calculate total ROI percentage (ROI % Ã— term)
            const totalRoiPercentage = plan.roiPercentage * plan.term;

            // Calculate profit amount
            const profitAmount = (investAmount * totalRoiPercentage) / 100;

            // Format return message
            const roiPeriodText = plan.roiPeriod.charAt(0).toUpperCase() + plan.roiPeriod.slice(1);
            const termPeriodText = plan.term > 1 ? plan.termPeriod + 's' : plan.termPeriod;

            var msg = `You will earn ${plan.roiPercentage}% ${roiPeriodText} for ${plan.term} ${termPeriodText}`;
            $(".profit-input").text(msg);

            // Display net profit
            $(".period").text("Net Profit $" + profitAmount.toFixed(2));
          } else {
            iziToast.error({
              message: "Plan not found",
              position: "topRight",
            });
          }
        }
      })(jQuery);
    </script>
